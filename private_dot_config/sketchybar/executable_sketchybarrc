sketchybar --add event aerospace_workspace_change
sketchybar --bar \
    corner_radius=10 \
    height=50 \
    blur_radius=0 \
    color=0xff232136


sketchybar --default \
    label.font="ComicShannsMono Nerd Font:Bold:18" \
    label.color=0xffcdd6f4 \
    label.padding_left=5 \
    label.padding_right=5 \
    icon.drawing=off \
    background.padding_left=2 \
    background.padding_right=2 \
    background.color=0x00000000 \
    background.border_color=0xff6c7086 \
    background.border_width=2 \
    updates=on

for sid in {1..9}
do
sketchybar --add item space.$sid left \
               --set space.$sid update_freq=1 script="$CONFIG_DIR/plugins/aerospace.sh" \
               --subscribe space.$sid aerospace_workspace_change \
               --set space.$sid \
               label="$sid" \
               label.padding_left=10 \
               label.padding_right=10 \
               background.height=40 \
               background.corner_radius=5 \
               background.drawing=on \
               icon.drawing=on \
               icon.padding_left=10 \
               click_script="aerospace workspace $sid" \
               script="$CONFIG_DIR/plugins/aerospace.sh $sid"
done

sketchybar --add item battery right \
           --set battery update_freq=1 script="$CONFIG_DIR/plugins/battery.sh" \
